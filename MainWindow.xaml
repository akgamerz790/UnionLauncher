<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="UnionLauncher.MainWindow"
        Title="UnionLauncher"
        Width="1280"
        Height="720"
        MinWidth="1280"
        MinHeight="720"
        WindowStartupLocation="CenterScreen"
        Background="#FF1E1E1E">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1111*"/>
            <ColumnDefinition Width="18*"/>
            <ColumnDefinition Width="151*"/>
        </Grid.ColumnDefinitions>
        <!-- Minecraft Logo -->
        <Image Source="Assets/MinecraftLogo.png"
               Width="520"
               Height="186"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Margin="380,50,0,0"
               Stretch="Uniform"
               RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <ScaleTransform ScaleX="1.18" ScaleY="1.18"/>
            </Image.RenderTransform>
        </Image>

        <!-- Creeper Face -->
        <Image Source="Assets/GraphicsLogo.png"
               Width="384" Height="384"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Margin="448,210,0,0"
               Stretch="Fill"
               RenderOptions.BitmapScalingMode="NearestNeighbor"
               SnapsToDevicePixels="True"
               UseLayoutRounding="True"/>

        <!-- Compact Loading Text - Right Side -->
        <Border
                VerticalAlignment="Bottom"
                Height="40"
                CornerRadius="5" Grid.Column="2" Margin="0,0,0,18" HorizontalAlignment="Right" Width="87">
            <TextBlock x:Name="LoadingTextBlock"
                       Text="Loading"
                       Foreground="White"
                       FontSize="15"
                       FontFamily="Segoe UI"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       TextTrimming="CharacterEllipsis">
                <TextBlock.Triggers>
                    <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                        <BeginStoryboard>
                            <Storyboard RepeatBehavior="Forever">
                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                From="0.3" To="1.0" Duration="0:0:1.5" AutoReverse="True"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </TextBlock.Triggers>
            </TextBlock>
        </Border>
    </Grid>
</Window>